@import "https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css"

.full-page
  display flex
  justify-content center
  align-items center
  width 100vw
  height 100vh
  flex-wrap wrap

.margined
  margin: 50px 0 0

.alert
  position absolute
  top 0
  width 100%

.content
  width 400px

.content-lg
  width 600px

.btn
  margin 5px

.tasks
  display flex
  justify-content center
  flex-wrap wrap

  .task
    flex 0 0 100%
    display flex
    align-items center
    border 1px solid black
    margin 2px 0

    p
      margin 0

    .description
      flex 3 0
      margin 5px

    .complete-btn
      flex 1 0

    .delete-btn
      flex 0 0 50px
.menu
{
background-color: #00547E;
border-bottom: 4px solid #04A3ED;
width:100%;
height: auto;
padding: 0 10px;
margin: 0px;
z-index: 1;
opacity: 0.9;
}

.menu  .navbar-nav > .active > a
{
background-color : #04A3ED;
color: white;
font-weight: bold;
}

.menu  .navbar-nav >  li >  a
{
font-size: 13px;
color: white;
padding: 10px 35px;

}
.menu  .navbar-nav >  li >  a:hover
{
background-color: #04A3ED;
}

.navbar-header > a
{
font-family: 'Ubuntu Condensed', sans-serif;
padding: 0px;
margin: 0px;
text-decoration: none;
color: white;
font-size: 25px;
padding: 5px 30px;
}
.navbar-header > a:hover
{
text-decoration: none;
color: #04A3ED;
}
